<?xml version="1.0" encoding="UTF-8" ?>
<UserControl
    x:Class="FluentPDF.App.Controls.FormFieldControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FluentPDF.App.Controls"
    xmlns:models="using:FluentPDF.Core.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Name="RootControl">

    <!--
        FormFieldControl - Custom WinUI control for PDF form field overlays
        Renders interactive controls (TextBox, CheckBox, RadioButton) positioned over PDF content
        Supports visual states: Normal, Hover, Focused, Error, ReadOnly
    -->

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="FormFieldControlTemplates.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <!-- ContentPresenter applies appropriate template based on FormFieldType -->
    <ContentPresenter
        x:Name="FieldPresenter"
        Content="{x:Bind Field, Mode=OneWay}"
        ContentTemplate="{StaticResource TextFieldTemplate}">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="CommonStates">
                <!-- Normal state - default appearance -->
                <VisualState x:Name="Normal" />

                <!-- Hover state - highlighted border -->
                <VisualState x:Name="PointerOver">
                    <VisualState.Setters>
                        <Setter Target="FieldPresenter.Opacity" Value="0.9" />
                    </VisualState.Setters>
                </VisualState>

                <!-- Focused state - emphasized border and background -->
                <VisualState x:Name="Focused">
                    <VisualState.Setters>
                        <Setter Target="FieldPresenter.Opacity" Value="1.0" />
                    </VisualState.Setters>
                </VisualState>

                <!-- Error state - red border to indicate validation failure -->
                <VisualState x:Name="Error">
                    <VisualState.Setters>
                        <Setter Target="FieldPresenter.BorderBrush" Value="{ThemeResource SystemFillColorCriticalBrush}" />
                    </VisualState.Setters>
                </VisualState>

                <!-- ReadOnly state - disabled appearance -->
                <VisualState x:Name="ReadOnly">
                    <VisualState.Setters>
                        <Setter Target="FieldPresenter.Opacity" Value="0.6" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </ContentPresenter>
</UserControl>
