<?xml version="1.0" encoding="UTF-8" ?>
<UserControl
    x:Class="FluentPDF.App.Controls.BookmarksPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FluentPDF.App.Controls"
    xmlns:models="using:FluentPDF.Core.Models"
    xmlns:converters="using:FluentPDF.App.Converters"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Name="RootControl">

    <UserControl.Resources>
        <!-- Value Converters -->
        <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter" />
        <converters:InverseCountToVisibilityConverter x:Key="InverseCountToVisibilityConverter" />

        <!-- Hierarchical DataTemplate for BookmarkNode -->
        <DataTemplate x:Key="BookmarkNodeTemplate" x:DataType="models:BookmarkNode">
            <TreeViewItem ItemsSource="{x:Bind Children, Mode=OneTime}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE8A5;" FontSize="14"/>
                    <TextBlock
                        Text="{x:Bind Title, Mode=OneTime}"
                        ToolTipService.ToolTip="{x:Bind Title, Mode=OneTime}"
                        TextTrimming="CharacterEllipsis"
                        MaxWidth="200"/>
                </StackPanel>
            </TreeViewItem>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <!-- Empty state (visible when bookmarks count is 0 and not loading) -->
        <TextBlock
            Text="{x:Bind ViewModel.EmptyMessage, Mode=OneWay}"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Style="{StaticResource SubtitleTextBlockStyle}"
            Foreground="{ThemeResource TextFillColorSecondaryBrush}">
            <TextBlock.Visibility>
                <Binding Path="ViewModel.Bookmarks.Count" Converter="{StaticResource CountToVisibilityConverter}" ConverterParameter="0">
                    <Binding.RelativeSource>
                        <RelativeSource Mode="Self"/>
                    </Binding.RelativeSource>
                </Binding>
            </TextBlock.Visibility>
        </TextBlock>

        <!-- Loading indicator -->
        <ProgressRing
            IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
            Width="60"
            Height="60"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>

        <!-- TreeView (visible when bookmarks count > 0) -->
        <TreeView
            x:Name="BookmarksTreeView"
            ItemsSource="{x:Bind ViewModel.Bookmarks, Mode=OneWay}"
            ItemTemplate="{StaticResource BookmarkNodeTemplate}"
            SelectionMode="Single"
            ItemInvoked="BookmarksTreeView_ItemInvoked">
            <TreeView.Visibility>
                <Binding Path="ViewModel.Bookmarks.Count" Converter="{StaticResource InverseCountToVisibilityConverter}" ConverterParameter="0">
                    <Binding.RelativeSource>
                        <RelativeSource Mode="Self"/>
                    </Binding.RelativeSource>
                </Binding>
            </TreeView.Visibility>
        </TreeView>
    </Grid>
</UserControl>
