<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:FluentPDF.Core.Models"
    xmlns:converters="using:FluentPDF.App.Converters">

    <!--
        FormFieldControlTemplates - Resource dictionary containing control templates
        Defines visual appearance for Text, Checkbox, and RadioButton field types
    -->

    <!-- Converters -->
    <converters:InverseBoolConverter x:Key="InverseBoolConverter" />

    <!-- Text Field Template (TextBox with border styling) -->
    <DataTemplate x:Key="TextFieldTemplate" x:DataType="models:PdfFormField">
        <TextBox
            x:Name="TextFieldInput"
            Text="{x:Bind Value, Mode=TwoWay}"
            MaxLength="{x:Bind MaxLength, Mode=OneTime}"
            IsReadOnly="{x:Bind IsReadOnly, Mode=OneTime}"
            PlaceholderText="{x:Bind Name, Mode=OneTime}"
            AcceptsReturn="False"
            TextWrapping="NoWrap"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            BorderThickness="2"
            CornerRadius="4"
            Padding="8,4">
            <TextBox.BorderBrush>
                <SolidColorBrush Color="{ThemeResource SystemAccentColor}" Opacity="0.6" />
            </TextBox.BorderBrush>
        </TextBox>
    </DataTemplate>

    <!-- Checkbox Field Template (CheckBox with Fluent Design styling) -->
    <DataTemplate x:Key="CheckboxFieldTemplate" x:DataType="models:PdfFormField">
        <CheckBox
            x:Name="CheckboxFieldInput"
            IsChecked="{x:Bind IsChecked, Mode=TwoWay}"
            IsEnabled="{x:Bind IsReadOnly, Mode=OneTime, Converter={StaticResource InverseBoolConverter}}"
            Content="{x:Bind Name, Mode=OneTime}"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Margin="4">
            <CheckBox.Style>
                <Style TargetType="CheckBox" BasedOn="{StaticResource DefaultCheckBoxStyle}">
                    <Setter Property="MinWidth" Value="0" />
                    <Setter Property="BorderThickness" Value="2" />
                    <Setter Property="CornerRadius" Value="4" />
                </Style>
            </CheckBox.Style>
        </CheckBox>
    </DataTemplate>

    <!-- RadioButton Field Template (RadioButton with Fluent Design styling) -->
    <DataTemplate x:Key="RadioButtonFieldTemplate" x:DataType="models:PdfFormField">
        <RadioButton
            x:Name="RadioButtonFieldInput"
            IsChecked="{x:Bind IsChecked, Mode=TwoWay}"
            GroupName="{x:Bind GroupName, Mode=OneTime}"
            IsEnabled="{x:Bind IsReadOnly, Mode=OneTime, Converter={StaticResource InverseBoolConverter}}"
            Content="{x:Bind Name, Mode=OneTime}"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Margin="4">
            <RadioButton.Style>
                <Style TargetType="RadioButton" BasedOn="{StaticResource DefaultRadioButtonStyle}">
                    <Setter Property="MinWidth" Value="0" />
                    <Setter Property="BorderThickness" Value="2" />
                </Style>
            </RadioButton.Style>
        </RadioButton>
    </DataTemplate>

</ResourceDictionary>
