<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:FluentPDF.App.Converters">

    <!--
        FormFieldControlTemplates - Resource dictionary containing control templates
        Defines visual appearance for Text, Checkbox, and RadioButton field types
    -->

    <!-- Converters -->
    <converters:InverseBoolConverter x:Key="InverseBoolConverter" />

    <!-- Text Field Template (TextBox with border styling) -->
    <DataTemplate x:Key="TextFieldTemplate" >
        <TextBox
            x:Name="TextFieldInput"
            Text="{Binding Value, Mode=TwoWay}"
            MaxLength="{Binding MaxLength, Mode=OneTime}"
            IsReadOnly="{Binding IsReadOnly, Mode=OneTime}"
            PlaceholderText="{Binding Name, Mode=OneTime}"
            AcceptsReturn="False"
            TextWrapping="NoWrap"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            BorderThickness="2"
            CornerRadius="4"
            Padding="8,4">
            <TextBox.BorderBrush>
                <SolidColorBrush Color="{ThemeResource SystemAccentColor}" Opacity="0.6" />
            </TextBox.BorderBrush>
        </TextBox>
    </DataTemplate>

    <!-- Checkbox Field Template (CheckBox with Fluent Design styling) -->
    <DataTemplate x:Key="CheckboxFieldTemplate" >
        <CheckBox
            x:Name="CheckboxFieldInput"
            IsChecked="{Binding IsChecked, Mode=TwoWay}"
            IsEnabled="{Binding IsReadOnly, Mode=OneTime, Converter={StaticResource InverseBoolConverter}}"
            Content="{Binding Name, Mode=OneTime}"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Margin="4">
            <CheckBox.Style>
                <Style TargetType="CheckBox" BasedOn="{StaticResource DefaultCheckBoxStyle}">
                    <Setter Property="MinWidth" Value="0" />
                    <Setter Property="BorderThickness" Value="2" />
                    <Setter Property="CornerRadius" Value="4" />
                </Style>
            </CheckBox.Style>
        </CheckBox>
    </DataTemplate>

    <!-- RadioButton Field Template (RadioButton with Fluent Design styling) -->
    <DataTemplate x:Key="RadioButtonFieldTemplate" >
        <RadioButton
            x:Name="RadioButtonFieldInput"
            IsChecked="{Binding IsChecked, Mode=TwoWay}"
            GroupName="{Binding GroupName, Mode=OneTime}"
            IsEnabled="{Binding IsReadOnly, Mode=OneTime, Converter={StaticResource InverseBoolConverter}}"
            Content="{Binding Name, Mode=OneTime}"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Margin="4">
            <RadioButton.Style>
                <Style TargetType="RadioButton" BasedOn="{StaticResource DefaultRadioButtonStyle}">
                    <Setter Property="MinWidth" Value="0" />
                    <Setter Property="BorderThickness" Value="2" />
                </Style>
            </RadioButton.Style>
        </RadioButton>
    </DataTemplate>

</ResourceDictionary>
