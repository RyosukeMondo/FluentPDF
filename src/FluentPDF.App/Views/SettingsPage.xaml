<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="FluentPDF.App.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FluentPDF.App.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Name="RootPage">
    <ScrollViewer>
        <StackPanel Padding="24" Spacing="24">
            <!-- Page Header -->
            <TextBlock
                FontSize="32"
                FontWeight="SemiBold"
                Text="Settings" />

            <!-- Rendering Quality Section -->
            <StackPanel Spacing="12">
                <TextBlock
                    FontSize="20"
                    FontWeight="SemiBold"
                    Text="Rendering Quality" />

                <TextBlock
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Text="Adjust the quality of PDF rendering to balance performance and visual clarity."
                    TextWrapping="Wrap" />

                <!-- Quality ComboBox -->
                <ComboBox
                    x:Name="QualityComboBox"
                    MinWidth="400"
                    HorizontalAlignment="Left"
                    Header="Quality Level"
                    ItemsSource="{x:Bind ViewModel.QualityOptions, Mode=OneTime}"
                    SelectedItem="{x:Bind ViewModel.SelectedQualityOption, Mode=TwoWay}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Spacing="4">
                                <TextBlock
                                    FontWeight="SemiBold"
                                    Text="{Binding DisplayName}" />
                                <TextBlock
                                    FontSize="12"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="{Binding Description}"
                                    TextWrapping="Wrap" />
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <!-- Ultra Quality Warning -->
                <InfoBar
                    x:Name="UltraWarningInfoBar"
                    IsClosable="False"
                    IsOpen="{x:Bind ViewModel.IsUltraQualitySelected, Mode=OneWay}"
                    Message="Ultra quality requires significant memory and may cause slowdowns or crashes on large documents or low-end devices."
                    Severity="Warning"
                    Title="Performance Warning" />

                <!-- Apply Button -->
                <Button
                    Command="{x:Bind ViewModel.ApplyQualityCommand}"
                    Content="Apply"
                    Style="{StaticResource AccentButtonStyle}" />

                <!-- Additional Info -->
                <StackPanel Spacing="8">
                    <TextBlock
                        FontSize="14"
                        FontWeight="SemiBold"
                        Text="About Quality Settings" />
                    <TextBlock
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        TextWrapping="Wrap">
                        <Run Text="• " />
                        <Run FontWeight="SemiBold" Text="Auto" />
                        <Run Text=" - The application automatically adjusts quality based on your display DPI and zoom level. This is recommended for most users." />
                    </TextBlock>
                    <TextBlock
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        TextWrapping="Wrap">
                        <Run Text="• " />
                        <Run FontWeight="SemiBold" Text="Manual Selection" />
                        <Run Text=" - Choose a specific quality level to override automatic detection. Higher quality levels render at higher DPI but use more memory and processing power." />
                    </TextBlock>
                    <TextBlock
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        TextWrapping="Wrap">
                        <Run Text="• " />
                        <Run FontWeight="SemiBold" Text="Real-Time Adjustment" />
                        <Run Text=" - When you move the application to a different display or change scaling settings, the rendering will automatically adjust if Auto mode is enabled." />
                    </TextBlock>
                </StackPanel>
            </StackPanel>

            <!-- Viewing Section -->
            <StackPanel Spacing="12">
                <TextBlock
                    FontSize="20"
                    FontWeight="SemiBold"
                    Text="Viewing" />

                <TextBlock
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Text="Configure default viewing preferences for newly opened documents."
                    TextWrapping="Wrap" />

                <!-- Default Zoom Level -->
                <ComboBox
                    MinWidth="300"
                    HorizontalAlignment="Left"
                    Header="Default Zoom Level"
                    ItemsSource="{x:Bind ViewModel.ZoomLevels, Mode=OneTime}"
                    SelectedItem="{x:Bind ViewModel.DefaultZoom, Mode=TwoWay}" />

                <!-- Scroll Mode -->
                <ComboBox
                    MinWidth="300"
                    HorizontalAlignment="Left"
                    Header="Scroll Mode"
                    ItemsSource="{x:Bind ViewModel.ScrollModes, Mode=OneTime}"
                    SelectedItem="{x:Bind ViewModel.ScrollMode, Mode=TwoWay}" />
            </StackPanel>

            <!-- Appearance Section -->
            <StackPanel Spacing="12">
                <TextBlock
                    FontSize="20"
                    FontWeight="SemiBold"
                    Text="Appearance" />

                <TextBlock
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Text="Customize the application's visual theme."
                    TextWrapping="Wrap" />

                <!-- Theme RadioButtons -->
                <StackPanel Spacing="8">
                    <TextBlock
                        FontWeight="SemiBold"
                        Text="Theme" />
                    <RadioButton
                        Content="Light"
                        GroupName="ThemeGroup"
                        IsChecked="{x:Bind ViewModel.IsLightTheme, Mode=TwoWay}" />
                    <RadioButton
                        Content="Dark"
                        GroupName="ThemeGroup"
                        IsChecked="{x:Bind ViewModel.IsDarkTheme, Mode=TwoWay}" />
                    <RadioButton
                        Content="Use System"
                        GroupName="ThemeGroup"
                        IsChecked="{x:Bind ViewModel.IsSystemTheme, Mode=TwoWay}" />
                </StackPanel>
            </StackPanel>

            <!-- Privacy Section -->
            <StackPanel Spacing="12">
                <TextBlock
                    FontSize="20"
                    FontWeight="SemiBold"
                    Text="Privacy" />

                <TextBlock
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Text="Control data collection and reporting. All data is anonymous."
                    TextWrapping="Wrap" />

                <!-- Telemetry Toggle -->
                <ToggleSwitch
                    Header="Telemetry"
                    IsOn="{x:Bind ViewModel.TelemetryEnabled, Mode=TwoWay}"
                    OffContent="Disabled"
                    OnContent="Enabled" />
                <TextBlock
                    Margin="0,-8,0,0"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Text="Helps improve FluentPDF by sending anonymous usage data."
                    TextWrapping="Wrap" />

                <!-- Crash Reporting Toggle -->
                <ToggleSwitch
                    Header="Crash Reporting"
                    IsOn="{x:Bind ViewModel.CrashReportingEnabled, Mode=TwoWay}"
                    OffContent="Disabled"
                    OnContent="Enabled" />
                <TextBlock
                    Margin="0,-8,0,0"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Text="Sends anonymous crash reports to help diagnose issues."
                    TextWrapping="Wrap" />
            </StackPanel>

            <!-- Reset Button -->
            <StackPanel Spacing="12">
                <Button
                    x:Name="ResetButton"
                    Click="ResetButton_Click"
                    Content="Reset All Settings to Defaults" />
                <TextBlock
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Text="Restores all settings to their original default values."
                    TextWrapping="Wrap" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
