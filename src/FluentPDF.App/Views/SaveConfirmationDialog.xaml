<ContentDialog
    x:Class="FluentPDF.App.Views.SaveConfirmationDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Unsaved Changes"
    PrimaryButtonText="Save"
    SecondaryButtonText="Don't Save"
    CloseButtonText="Cancel"
    DefaultButton="Primary"
    AutomationProperties.AutomationId="SaveConfirmationDialog">

    <StackPanel Spacing="16">
        <!-- Warning Icon -->
        <FontIcon
            Glyph="&#xE7BA;"
            FontSize="48"
            Foreground="{ThemeResource SystemAccentColor}"
            HorizontalAlignment="Center"
            AutomationProperties.AutomationId="WarningIcon"/>

        <!-- Message -->
        <TextBlock
            x:Name="MessageTextBlock"
            TextWrapping="Wrap"
            HorizontalAlignment="Center"
            TextAlignment="Center"
            AutomationProperties.AutomationId="MessageTextBlock"/>
    </StackPanel>
</ContentDialog>
